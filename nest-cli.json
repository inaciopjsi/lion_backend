{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "mail/system-mail/templates/**/*.hbs",
        "watchAssets": true
      },
      {
        "include": "../assets/public/**/*",
        "watchAssets": true
      },
      {
        "include": "../assets/uploads/**/*",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true
  }
}
